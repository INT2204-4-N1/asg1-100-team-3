<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.GoogleTranslateController">
   <children>
      <TextArea fx:id="inputText" layoutX="58.0" layoutY="185.0" onKeyPressed="#pressKeyBoard" prefHeight="123.0" prefWidth="312.0" />
      <TextArea fx:id="outputText" layoutX="436.0" layoutY="186.0" prefHeight="123.0" prefWidth="312.0" />
      <Button fx:id="tranButton" layoutX="158.0" layoutY="379.0" mnemonicParsing="false" onAction="#pressButton" prefHeight="25.0" prefWidth="99.0" text="Dịch" />
